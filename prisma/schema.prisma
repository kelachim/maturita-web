generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Station {
  id          String      @id @default(cuid())
  name        String
  classroomId String?
  events      Event[]
  classroom   Classroom?  @relation(fields: [classroomId], references: [id])
  devices     UsbDevice[]
}

model UsbDevice {
  id            String   @id @default(cuid())
  vendor_id     String
  product_id    String
  files         String[]
  description   String?
  serial_number String?
  stationId     String?
  event         Event[]
  tracked       Boolean  @default(false)
  station       Station? @relation(fields: [stationId], references: [id])
}

model Event {
  id          String    @id @default(cuid())
  user        String
  variation   Variation
  tracked     Boolean
  createdAt   DateTime
  stationId   String
  usbdeviceId String
  station     Station   @relation(fields: [stationId], references: [id])
  usbdevice   UsbDevice @relation(fields: [usbdeviceId], references: [id])
}

model Subscription {
  id        Int      @id @default(autoincrement())
  endpoint  String   @unique
  keys      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Classroom {
  id       String    @id @default(cuid())
  name     String
  stations Station[]
}

enum Status {
  Active
  Inactive
}

enum Variation {
  Connect
  Disconnect
}
